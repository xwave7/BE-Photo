<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= photo.name%></h1>
        
        <div style="width: 30%; margin:25px auto;">
            <form action="/photos/<%= photo._id%>/comments" method="POST">
                <div class="from-group" style="margin:10px auto">
                    <input class="form-control" type="text" placeholder="text" name="comment[text]">
                </div>
                <div class="from-group" style="margin:10px auto">
                    <button class="btn btn-large btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/photos">Go back!</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>