<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to B&E Photo!</h1>
            <p>View our hand-picked photographys from all over the world!</p>
            <p>
                <a class="btn btn-primary btn-large" href="/photos/new">Add new photo</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% photos.forEach(function(photo){ %>
            <div class="col-md-3 col-sm-12">
                <div class="thumbnail">
                    <img src="<%= photo.image %>">
                </div>
                <div class="caption">
                    <h4><%= photo.name %></h4>
                </div>
                <p>
                    <a id="gap" href="/photos/<%=photo._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        <% })%>
    </div>
</div>

<% include ../partials/footer %>